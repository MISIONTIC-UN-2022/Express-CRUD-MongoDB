{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["standard", "prettier", "plugin:node/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-plusplus": "off",
    "no-process-exit": "off",
    "class-methods-use-this": "off",
    "node/no-unsupported-features/es-syntax": "off"
  }
}
